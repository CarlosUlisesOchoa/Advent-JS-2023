{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist/retos",
    "rootDir": "./retos",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "retos/**/*"
  ],
  "exclude": [
    "node_modules",
    "ignore-this-dir"
  ]
}